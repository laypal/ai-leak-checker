{
  "$schema": "./fixtures.schema.json",
  "description": "PII test samples for detection engine",
  "version": "1.0.0",
  "categories": {
    "creditCards": {
      "description": "Credit card numbers with Luhn validation",
      "validSamples": [
        { "number": "4532015112830366", "issuer": "visa", "formatted": "4532-0151-1283-0366" },
        { "number": "5425233430109903", "issuer": "mastercard", "formatted": "5425 2334 3010 9903" },
        { "number": "374245455400126", "issuer": "amex", "formatted": "3742 454554 00126" },
        { "number": "6011000990139424", "issuer": "discover", "formatted": "6011-0009-9013-9424" }
      ],
      "invalidSamples": [
        { "number": "1234567890123456", "reason": "fails_luhn" },
        { "number": "4532015112830367", "reason": "fails_luhn_off_by_one" },
        { "number": "123456789012", "reason": "too_short" },
        { "number": "12345678901234567890", "reason": "too_long" }
      ],
      "patterns": {
        "visa": "^4[0-9]{12}(?:[0-9]{3})?$",
        "mastercard": "^5[1-5][0-9]{14}$|^2[2-7][0-9]{14}$",
        "amex": "^3[47][0-9]{13}$",
        "discover": "^6(?:011|5[0-9]{2})[0-9]{12}$"
      }
    },
    "emailAddresses": {
      "description": "Email addresses - various formats",
      "validSamples": [
        "user@example.com",
        "user.name@domain.co.uk",
        "user+tag@subdomain.example.org",
        "first.last@company-name.com"
      ],
      "invalidSamples": [
        "@example.com",
        "user@",
        "user@.com",
        "user name@example.com"
      ],
      "sensitivityNotes": "Work emails may be less sensitive than personal"
    },
    "ukPhoneNumbers": {
      "description": "UK phone number formats",
      "validSamples": [
        { "number": "+447911123456", "format": "international" },
        { "number": "07911123456", "format": "mobile" },
        { "number": "07911 123 456", "format": "mobile_spaced" },
        { "number": "020 7946 0958", "format": "landline_london" },
        { "number": "01onal234 567890", "format": "landline_regional" },
        { "number": "0800 123 4567", "format": "freephone" }
      ],
      "invalidSamples": [
        { "number": "07911", "reason": "too_short" },
        { "number": "079111234567890", "reason": "too_long" },
        { "number": "06911123456", "reason": "invalid_prefix" }
      ],
      "patterns": {
        "mobile": "^(?:07[0-9]{9}|\\+447[0-9]{9})$",
        "landline": "^(?:0[1-9][0-9]{8,9}|\\+44[1-9][0-9]{8,9})$"
      }
    },
    "ukNationalInsurance": {
      "description": "UK National Insurance numbers",
      "validSamples": [
        "AB123456C",
        "CD 12 34 56 E",
        "GH123456F"
      ],
      "invalidSamples": [
        { "number": "DA123456A", "reason": "invalid_prefix_da" },
        { "number": "QQ123456A", "reason": "invalid_prefix_qq" },
        { "number": "AB12345C", "reason": "too_short" },
        { "number": "AB1234567C", "reason": "too_long" }
      ],
      "pattern": "^(?!BG|GB|NK|KN|TN|NT|ZZ)[A-CEGHJ-PR-TW-Z]{2}[0-9]{6}[A-D]$",
      "notes": "First two letters have restrictions, last letter A-D only"
    },
    "usSSN": {
      "description": "US Social Security Numbers (future expansion)",
      "validSamples": [
        "123-45-6789",
        "123 45 6789",
        "123456789"
      ],
      "invalidSamples": [
        { "number": "000-12-3456", "reason": "invalid_area" },
        { "number": "123-00-1234", "reason": "invalid_group" },
        { "number": "123-45-0000", "reason": "invalid_serial" }
      ],
      "pattern": "^(?!000|666|9\\d{2})\\d{3}[- ]?(?!00)\\d{2}[- ]?(?!0000)\\d{4}$",
      "enabled": false,
      "notes": "Disabled by default - UK focus for MVP"
    },
    "addresses": {
      "description": "Physical addresses (low priority for MVP)",
      "validSamples": [
        "123 High Street, London, SW1A 1AA",
        "Flat 2, 45 Main Road, Manchester M1 2AB"
      ],
      "enabled": false,
      "notes": "Complex to detect reliably - defer to post-MVP"
    }
  },
  "combinedScenarios": {
    "description": "Real-world scenarios with multiple PII types",
    "samples": [
      {
        "text": "My email is john.doe@company.com and my phone is 07911123456",
        "expectedFindings": ["email", "uk_phone"]
      },
      {
        "text": "Payment: 4532015112830366, contact: user@example.com",
        "expectedFindings": ["credit_card", "email"]
      },
      {
        "text": "Employee NI: AB123456C, works at example@company.org",
        "expectedFindings": ["uk_ni", "email"]
      }
    ]
  }
}
